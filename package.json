{
  "name": "scroll-to-position",
  "version": "1.5.0",
  "description": "Animate scroll to either an x, y, or x and y position in any scrollable viewport with customisable easing",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "author": "Ben Meyrick <bameyrick@gmail.com>",
  "license": "MIT",
  "keywords": ["scroll", "easing", "animated"],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bameyrick/scroll-to-position.git"
  },
  "scripts": {
    "start": "yarn tidy-clean && yarn webpack-dev-server --host 0.0.0.0 --watch --config webpack.dev.babel.js",
    "netlify": "yarn tidy-clean && yarn webpack --config webpack.netlify.babel.js",
    "lint": "tslint --project tslint.json",
    "lint-staged": "lint-staged",
    "precommit": "lint-staged",
    "prepublishOnly": "yarn tidy-clean && yarn lint && tsc ./src/* --outDir dist/ && rm -rf ./dist/demo",
    "postcommit": "npm run prepublishOnly",
    "tidy-clean": "rm -rf ./dist && rm -rf ./build"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --print-width 140 --single-quote --trailing-comma es5 --parser typescript --write",
      "tslint --project tslint.json",
      "git add"
    ],
    "*.json": ["prettier --print-width 140 --single-quote --trailing-comma es5 --parser json --write", "git add"],
    "*.scss": ["prettier --print-width 140 --single-quote --parser postcss --write", "sass-lint", "git add"]
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/register": "^7.4.4",
    "autoprefixer": "^9.5.1",
    "babel-eslint": "^10.0.1",
    "chalk": "^2.4.2",
    "circular-dependency-plugin": "^5.0.2",
    "css-loader": "^2.1.1",
    "cssnano": "^4.1.10",
    "eslint": "^5.16.0",
    "eslint-cli": "^1.1.1",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-prettier": "^3.0.1",
    "file-loader": "^3.0.1",
    "husky": "^2.2.0",
    "lint-staged": "^8.1.6",
    "mini-css-extract-plugin": "^0.6.0",
    "node-sass": "^4.12.0",
    "postcss-loader": "^3.0.0",
    "postcss-mq-optimize": "^1.1.0",
    "postcss-url": "^8.0.0",
    "prettier": "^1.17.0",
    "pug-html-loader": "^1.1.5",
    "sass-lint": "^1.13.1",
    "sass-loader": "^7.1.0",
    "ts-loader": "^5.4.5",
    "tslint": "^5.16.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.4.5",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.1",
    "webpack-dev-server": "^3.3.1",
    "webpack-fix-style-only-entries": "^0.2.1",
    "webpack-livereload-plugin": "^2.2.0",
    "webpack-merge": "^4.2.1"
  },
  "dependencies": {
    "js-easing-functions": "^1.0.2",
    "prevent-scrolling": "^1.2.1",
    "tick-manager": "^1.0.3",
    "viewport-details": "^1.0.1"
  }
}
