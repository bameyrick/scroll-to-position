doctype html
html
    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')

        title Scroll to Position Demo

        link(rel="stylesheet" href="/styles.css")

        //- style
        //-     include ./styles.css
    body
        - var i = 0
        while i < 5000
            .Block
                .Block__number= i
                .Block__line
                .Block__line
                .Block__line
                .Block__line
            - i += 50
        .ScrollToControl
            label.ScrollToControl__label Scroll To
            input.ScrollToControl__input.js-position(type="number" min="0" max="5000" step="10")
            button.ScrollToControl__button.js-button(type="button") Go

            details.ScrollToControl__options
                summary.ScrollToControl__summary Options

                p
                    label.ScrollToControl__option
                        input.js-animate(type="checkbox" checked)
                        | Animate

                p
                    label.ScrollToControl__option
                        input.js-not-in-view(type="checkbox")
                        | Only scroll if target not fully in view
        
        script(src="/index.js")
        
        if debug
            script
                | document.write('<script src="//' + (location.host || 'localhost').split(':')[0] + ':35729/livereload.js" defer></' + 'script>')
